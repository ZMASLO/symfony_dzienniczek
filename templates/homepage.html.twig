{% extends 'base.html.twig' %}

{% block body %}
    {% for student in students %}
        <div>
            <a href="/student/{{ student.id }}"> {{ student.name }} {{ student.secondname }} </a> Stan:
            {% for pre in presence %}
                {% if pre.student == student %}
                    {{ pre.status }}
                {% endif %}
            {% endfor %}
            <a href="/presence/{{student.id}}/O"><button>Obecny</button></a>
            <a href="/presence/{{student.id}}/S"><button>Spóźniony</button></a>
            <a href="/presence/{{student.id}}/N"><button>Nie obecny</button></a>
        </div>
    {% endfor %}
{% endblock %}